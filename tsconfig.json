{
    "compilerOptions": {
        "lib": [
            "es5",
            "es6",
            "DOM"
        ],
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "sourceMap": false,
        "allowJs": false,
        "strictNullChecks": true,
        "jsx": "react",
        "downlevelIteration": true,
        "removeComments": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}